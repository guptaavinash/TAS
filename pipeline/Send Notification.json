{
	"name": "Send Notification",
	"properties": {
		"activities": [
			{
				"name": "Send Failure EMail",
				"type": "WebActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://prod-20.southeastasia.logic.azure.com:443/workflows/4a7c14454139434fbeceb85285268247/triggers/manual/paths/invoke?api-version=2016-10-01&sp=%2Ftriggers%2Fmanual%2Frun&sv=1.0&sig=BvRViYb6NCf7TdrWjRUOZu2PZbKAaIHdpuf40V3za8k",
					"method": "POST",
					"headers": {
						"Content-Type": "application/json"
					},
					"body": {
						"value": "{\n   \"DataFactoryName\": \"@{pipeline().DataFactory}\",\n   \"PipelineName\": \"@{pipeline().Pipeline}\",\n   \"Subject\": \"An error has occurred!\",\n   \"ErrorMessage\": \"The ADF pipeline has crashed! Please check the logs.\",\n   \"EmailTo\": \"myemail@outlook.com\"\n}",
						"type": "Expression"
					}
				}
			}
		],
		"parameters": {
			"EmailTo": {
				"type": "string",
				"defaultValue": "No Email Set"
			},
			"Subject": {
				"type": "string",
				"defaultValue": "No Subject Set"
			},
			"ErrorMessage": {
				"type": "string",
				"defaultValue": "No Message Set"
			}
		},
		"annotations": []
	}
}